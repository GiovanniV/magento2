<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="kandn" translate="label" sortOrder="20">
            <label><![CDATA[K &amp; N]]></label>
        </tab>
        <section id="boomi_authorization" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Boomi Authorization</label>
            <tab>kandn</tab>
            <resource>Born_BoomiConnector::authorization</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
                <field id="username" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Username</label>
                    <comment>Please change it according to environment.</comment>
                </field>
                <field id="password" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Password</label>
                    <comment>Please change it according to environment.</comment>
                </field>			
            </group>
        </section>
    </system>
</config>
